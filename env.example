# MongoDB Connection String
# Replace with your MongoDB connection string
# For local development: mongodb://localhost:27017/drugfree-india
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/drugfree-india
MONGODB_URI=mongodb://localhost:27017/drugfree-india

# Server Port
PORT=3000

# Environment
NODE_ENV=development

# Optional: JWT Secret for future authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Optional: API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 